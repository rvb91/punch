<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Name" %>
    <%= form.select :user_id, User.all.collect { |p| [ p.name, p.id ] }, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :clockin_time %>
    <%= form.datetime_select :clockin_time %>
  </div>

  <div class="field">
    <%= form.label :clockout_time %>
    <%= form.datetime_select :clockout_time, include_blank:true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
